#!/bin/bash

# nickmahda@gmail.com

cd $(dirname $(realpath $0))/..
DIR=$(pwd)
IGNORE=("p10k_backup.zsh" "ssh_config" "iterm_config.plist")

ignore () {
    for f in "${IGNORE[@]}"; do
        [[ $f == "$1" ]] && return 0
    done
    return 1
}

bacup () {
    if [ -e ~/."$1" ]; then
        if [[ -L ~/."$1" ]]; then
            rm ~/."$1"
        elif ! [[ -z "$1" ]] && ! ignore "$1"; then
            mkdir -pv $DIR/backup
            mv -v ~/."$1" $DIR/backup/"$1"
        fi
    fi
}

mov () {
    name=$(basename "$1" | sed 's/^\.//')

    if ignore $name; then
        echo "Skipping $name"
        return
    fi

    bacup $name
    ln -sfv "$1" ~/.$name
}

mkdir -pv ~/.ssh
touch ~/.vars.local

mov $DIR/zsh
mov $DIR/vim
mov $DIR/tmux/.tmux.conf
mov $DIR/bin

cd $DIR/config
for f in *; do mov $DIR/config/$f; done

if [[ -n $1 ]]; then
    echo "[ -f ~/.vars ] && source ~/.vars" >> ~/.bashrc
    if [[ "$OSTYPE" == "darwin"* ]]; then
        echo "[ -f ~/.bashrc ] && source ~/.bashrc" >> ~/.bash_profile
    fi
fi
